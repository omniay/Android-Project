<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohamed.e_commerceproject.SignUp">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="73dp"
        android:text="Username"

        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="93dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="3dp"
        android:layout_y="179dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/job"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_x="3dp"
        android:layout_y="259dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="443dp"
        android:background="@android:color/holo_red_dark"
        android:text="next" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_x="-1dp"
        android:layout_y="318dp"
        android:text="Email"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_x="1dp"
        android:layout_y="367dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="240dp"
        android:layout_y="0dp"
        android:text="Gender"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="235dp"
        android:layout_y="71dp"
        android:text="BirthDate"
        android:textStyle="bold" />



    <Spinner
        android:id="@+id/spinner"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_x="233dp"
        android:layout_y="35dp"
        android:entries="@array/gender" />

    <EditText
        android:id="@+id/Fullname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="28dp"
        android:ems="10"
        android:inputType="textPersonName" />
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="206dp"
        android:layout_height="327dp"
        android:layout_x="168dp"
        android:layout_y="108dp"
        android:background="@android:color/holo_blue_bright" />
    <TextView
        android:id="@+id/f"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="2dp"
        android:text="Full Name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_x="2dp"
        android:layout_y="137dp"
        android:text="Password"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_x="1dp"
        android:layout_y="223dp"
        android:text="Job"
        android:textStyle="bold" />

</AbsoluteLayout>
